    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.js",
    "**/*.test.js"
  ],
  "include": ["src/**/*.ts", "src/**/*.js"],
  "references": [
    {
      "path": "../../core/database/tsconfig.lib.json"
    },
    {
      "path": "../domain/tsconfig.lib.json"
    },
    {
      "path": "../database/tsconfig.lib.json"
    }
  ]
}
