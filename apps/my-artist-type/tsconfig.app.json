{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "baseUrl": ".",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@todo": ["../../packages/todo/src/index.ts"],
      "@todo/*": ["../../packages/todo/src/*"],
      "@core": ["../../packages/core/src/index.ts"],
      "@core/*": ["../../packages/core/src/*"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../packages/ui/theme/tsconfig.lib.json"
    },
    {
      "path": "../../packages/core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/auth/tsconfig.lib.json"
    },
    {
      "path": "../../packages/ui/shadcn/tsconfig.lib.json"
    },
    {
      "path": "../../packages/todo/tsconfig.lib.json"
    }
  ]
}
