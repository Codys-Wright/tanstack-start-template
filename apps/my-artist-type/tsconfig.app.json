{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "baseUrl": ".",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@artist-types": ["../../packages/artist-types/src/index.ts"],
      "@artist-types/server": ["../../packages/artist-types/src/server.ts"],
      "@artist-types/database": ["../../packages/artist-types/src/database.ts"],
      "@artist-types/*": ["../../packages/artist-types/src/*"],
      "@todo": ["../../packages/todo/src/index.ts"],
      "@todo/*": ["../../packages/todo/src/*"],
      "@core": ["../../packages/core/src/index.ts"],
      "@core/*": ["../../packages/core/src/*"],
      "@auth": ["../../packages/auth/src/index.ts"],
      "@auth/*": ["../../packages/auth/src/*"],
      "@quiz": ["../../packages/quiz/src/index.ts"],
      "@quiz/*": ["../../packages/quiz/src/*"],
      "@shadcn": ["../../packages/ui/shadcn/src/index.ts"],
      "@shadcn/*": ["../../packages/ui/shadcn/src/*"],
      "@components": ["../../packages/ui/components/src/index.ts"],
      "@components/*": ["../../packages/ui/components/src/*"],
      "@example": ["../../packages/example/src/index.ts"],
      "@example/*": ["../../packages/example/src/*"],
      "@theme": ["../../packages/ui/theme/src/index.ts"],
      "@theme/*": ["../../packages/ui/theme/src/*"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../packages/artist-types/tsconfig.lib.json"
    },
    {
      "path": "../../packages/ui/components/tsconfig.lib.json"
    },
    {
      "path": "../../packages/quiz/tsconfig.lib.json"
    },
    {
      "path": "../../packages/auth/tsconfig.lib.json"
    },
    {
      "path": "../../packages/example/tsconfig.lib.json"
    },
    {
      "path": "../../packages/todo/tsconfig.lib.json"
    },
    {
      "path": "../../packages/ui/theme/tsconfig.lib.json"
    },
    {
      "path": "../../packages/ui/shadcn/tsconfig.lib.json"
    },
    {
      "path": "../../packages/core/tsconfig.lib.json"
    }
  ]
}
