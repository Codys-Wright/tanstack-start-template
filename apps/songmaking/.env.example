# Server
# Note: Port 5434 is used to avoid conflicts with other postgres instances
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/songmaking
PORT=3001
API_URL=http://localhost:3001
NODE_ENV=development

# Application
APP_NAME=Songmaking

# Better Auth
# Generate with: openssl rand -base64 32
# IMPORTANT: Must be at least 32 characters
BETTER_AUTH_SECRET=replace-me-with-openssl-rand-base64-32-output
BETTER_AUTH_URL=http://localhost:3001

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Client Origin (for CORS)
CLIENT_ORIGIN=http://localhost:3001

# Client
VITE_API_URL=http://localhost:3001
