{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "plugins": [
      {
        "name": "@effect/language-service",
        "quickinfoEffectParameters": "always",
        "namespaceImportPackages": ["effect", "@effect/*"],
        "topLevelNamedReexports": "follow",
        "diagnosticSeverity": {
          "importFromBarrel": "error"
        },
        "importAliases": {
          "Array": "Arr",
          "Function": "Func",
          "Boolean": "Bool",
          "Number": "Num",
          "String": "Str"
        }
      }
    ]
  }
}
