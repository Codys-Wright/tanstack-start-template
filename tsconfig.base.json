{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@auth/client": ["packages/auth/client/src/index.ts"],
      "@auth/client/*": ["packages/auth/client/src/*"],
      "@auth/server": ["packages/auth/server/src/index.ts"],
      "@auth/server/*": ["packages/auth/server/src/*"],
      "@auth/database": ["packages/auth/database/src/index.ts"],
      "@auth/database/*": ["packages/auth/database/src/*"],
      "@auth/domain": ["packages/auth/domain/src/index.ts"],
      "@auth/domain/*": ["packages/auth/domain/src/*"],
      "@core/database": ["packages/core/database/src/index.ts"],
      "@core/database/*": ["packages/core/database/src/*"],
      "@shadcn": ["packages/ui/shadcn/src/index.ts"],
      "@shadcn/*": ["packages/ui/shadcn/src/*"],
      "@theme": ["packages/ui/theme/src/index.ts"],
      "@theme/*": ["packages/ui/theme/src/*"]
    },
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "plugins": [
      {
        "name": "@effect/language-service",
        "quickinfoEffectParameters": "always",
        "namespaceImportPackages": ["effect", "@effect/*"],
        "topLevelNamedReexports": "follow",
        "diagnosticSeverity": {
          "importFromBarrel": "error"
        },
        "importAliases": {
          "Array": "Arr",
          "Function": "Func",
          "Boolean": "Bool",
          "Number": "Num",
          "String": "Str"
        }
      }
    ]
  }
}
