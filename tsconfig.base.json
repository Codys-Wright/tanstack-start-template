{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "paths": {
      "@artist-types": ["./packages/artist-types/src/index.ts"],
      "@artist-types/server": ["./packages/artist-types/src/server.ts"],
      "@artist-types/database": ["./packages/artist-types/src/database.ts"],
      "@artist-types/*": ["./packages/artist-types/src/*"],
      "@auth": ["./packages/auth/src/index.ts"],
      "@auth/server": ["./packages/auth/src/server.ts"],
      "@auth/database": ["./packages/auth/src/database.ts"],
      "@auth/*": ["./packages/auth/src/*"],
      "@core": ["./packages/core/src/index.ts"],
      "@core/server": ["./packages/core/src/server.ts"],
      "@core/database": ["./packages/core/src/database.ts"],
      "@core/client": ["./packages/core/src/client/index.ts"],
      "@core/client/*": ["./packages/core/src/client/*"],
      "@core/*": ["./packages/core/src/*"],
      "@email": ["./packages/email/src/index.ts"],
      "@email/*": ["./packages/email/src/*"],
      "@example": ["./packages/example/src/index.ts"],
      "@example/server": ["./packages/example/src/server.ts"],
      "@example/database": ["./packages/example/src/database.ts"],
      "@example/*": ["./packages/example/src/*"],
      "@playground": ["./packages/playground/src/index.ts"],
      "@playground/*": ["./packages/playground/src/*"],
      "@quiz": ["./packages/quiz/src/index.ts"],
      "@quiz/server": ["./packages/quiz/src/server.ts"],
      "@quiz/database": ["./packages/quiz/src/database.ts"],
      "@quiz/core": ["./packages/quiz/src/core/index.ts"],
      "@quiz/core/*": ["./packages/quiz/src/core/*"],
      "@quiz/*": ["./packages/quiz/src/*"],
      "@todo": ["./packages/todo/src/index.ts"],
      "@todo/server": ["./packages/todo/src/server.ts"],
      "@todo/database": ["./packages/todo/src/database.ts"],
      "@todo/*": ["./packages/todo/src/*"],
      "@components": ["./packages/ui/components/src/index.ts"],
      "@components/*": ["./packages/ui/components/src/*"],
      "@shadcn": ["./packages/ui/shadcn/src/index.ts"],
      "@shadcn/*": ["./packages/ui/shadcn/src/*"],
      "@theme": ["./packages/ui/theme/src/index.ts"],
      "@theme/*": ["./packages/ui/theme/src/*"],
      "@my-artist-type": ["./apps/my-artist-type/src/index.ts"],
      "@my-artist-type/*": ["./apps/my-artist-type/src/*"],
      "@songmaking": ["./apps/songmaking/src/index.ts"],
      "@songmaking/*": ["./apps/songmaking/src/*"],
      "@sse": ["./packages/sse/src/index.ts"],
      "@sse/server": ["./packages/sse/src/server.ts"],
      "@sse/client": ["./packages/sse/src/client.ts"],
      "@sse/*": ["./packages/sse/src/*"],
      "@chat": ["./packages/chat/src/index.ts"],
      "@chat/server": ["./packages/chat/src/server.ts"],
      "@chat/client": ["./packages/chat/src/client.ts"],
      "@chat/components": ["./packages/chat/src/components/index.ts"],
      "@chat/*": ["./packages/chat/src/*"]
    },
    "plugins": [
      {
        "name": "@effect/language-service",
        "quickinfoEffectParameters": "always",
        "namespaceImportPackages": ["effect", "@effect/*"],
        "topLevelNamedReexports": "follow",
        "diagnosticSeverity": {
          "importFromBarrel": "error"
        },
        "importAliases": {
          "Array": "Arr",
          "Function": "Func",
          "Boolean": "Bool",
          "Number": "Num",
          "String": "Str"
        }
      }
    ]
  }
}
